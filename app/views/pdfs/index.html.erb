<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="rounded-md bg-yellow-50 p-4 mb-4">
    <div class="flex">
      <div class="ml-3">
        <h3 class="text-xs font-semibold">Supported Labs</h3>
        <div class="mt-2 text-sm text-yellow-700">
          <p><span class="font-medium"><%= t('pdfs.supported_labs') %></span></p>
        </div>
      </div>
    </div>
  </div>

  <%# Upload Form %>
  <div class="mb-8">
    <h2 class="text-lg font-medium mb-4">Upload New PDF</h2>
    <%= form_with(model: HealthRecord.new, url: pdfs_path, local: true, multipart: true) do |f| %>
      <div class="bg-white shadow sm:rounded-lg p-6">
        <div class="space-y-4">
          <div>
            <%= f.label :pdf_file, "Select PDF File", class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= f.file_field :pdf_file, 
                  class: "block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100",
                  accept: "application/pdf",
                  required: true %>
            </div>
          </div>
          
          <div>
            <%= f.label :notes, "Notes (optional)", class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= f.text_area :notes, 
                  class: "shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md",
                  rows: 3 %>
            </div>
          </div>

          <div class="pt-4">
            <%= f.submit "Upload PDF", 
                class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <%# List of Uploaded PDFs %>
  <div class="bg-white shadow overflow-hidden sm:rounded-md">
    <div class="px-4 py-5 sm:px-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900">Uploaded PDFs</h3>
    </div>
    <ul role="list" class="divide-y divide-gray-200">
      <% @pdfs.each do |pdf| %>
        <li class="px-4 py-4 sm:px-6">
          <div class="flex items-center justify-between">
            <div class="flex-1 min-w-0">
              <p class="text-sm font-medium text-gray-900 truncate">
                Health Record from <%= pdf.created_at.strftime("%B %d, %Y") %>
              </p>
              <% if pdf.notes.present? %>
                <p class="mt-1 text-sm text-gray-500"><%= pdf.notes %></p>
              <% end %>
            </div>
            <div class="flex space-x-4">
              <%= link_to "View Details", pdf_path(pdf), 
                  class: "inline-flex items-center px-3 py-1.5 border border-transparent text-xs font-medium rounded-md text-blue-700 bg-blue-100 hover:bg-blue-200" %>
              
              <%= link_to "Download", download_pdf_path(pdf), 
                  class: "inline-flex items-center px-3 py-1.5 border border-transparent text-xs font-medium rounded-md text-green-700 bg-green-100 hover:bg-green-200" %>
              
              <%= link_to "View PDF", view_pdf_path(pdf), 
                  class: "inline-flex items-center px-3 py-1.5 border border-transparent text-xs font-medium rounded-md text-purple-700 bg-purple-100 hover:bg-purple-200",
                  target: "_blank" %>
              
              <%= button_to "Delete", pdf_path(pdf), 
                  method: :delete,
                  class: "inline-flex items-center px-3 py-1.5 border border-transparent text-xs font-medium rounded-md text-red-700 bg-red-100 hover:bg-red-200",
                  data: { confirm: "Are you sure you want to delete this record?" } %>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>