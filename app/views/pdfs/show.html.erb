<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-2xl font-bold">PDF Details</h1>
    <div class="space-x-4">
      <%= link_to 'Download PDF', download_pdf_path(@pdf), 
          class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
      <%= link_to 'View PDF', view_pdf_path(@pdf), 
          class: "bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600",
          target: "_blank" %>
    </div>
  </div>

  <%= render 'pdfs/patient_info', data: @parsed_data[:patient_info] %>
  <%= render 'pdfs/vital_signs', data: @parsed_data[:vital_signs] %>
  <%= render 'pdfs/measurements', data: @parsed_data[:measurements] %>
  <%= render 'pdfs/lab_results', data: @parsed_data[:lab_results] %>
  <%= render 'pdfs/notes', data: @parsed_data[:notes] %>
</div>
