<div class="bg-white shadow overflow-hidden sm:rounded-lg mb-6">
  <div class="px-4 py-5 sm:px-6">
    <h3 class="text-lg leading-6 font-medium text-gray-900">Lab Results</h3>
  </div>
  <div class="border-t border-gray-200">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Test</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Value</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Unit</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% data.each do |result| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= result[:name] %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= result[:value] %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= result[:unit] %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div> 