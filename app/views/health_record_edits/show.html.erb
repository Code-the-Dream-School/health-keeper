<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="bg-white shadow sm:rounded-lg p-6">
    <h1 class="text-2xl font-bold mb-6">Edit Health Record</h1>

    <%= form_with(model: @health_record, url: health_record_edit_path(@health_record), method: :patch) do |f| %>
      <div class="space-y-4">
        <div>
          <%= f.label :pdf_file, "PDF File", class: "block text-sm font-medium text-gray-700" %>
          <% if @health_record.pdf_file.attached? %>
            <p class="mt-1 text-sm text-gray-500">Current file: <%= @health_record.pdf_file.filename %></p>
          <% end %>
          <div class="mt-1">
            <%= f.file_field :pdf_file, 
                class: "block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100",
                accept: "application/pdf" %>
          </div>
        </div>

        <div>
          <%= f.label :notes, "Notes", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.text_area :notes, 
                class: "shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md",
                rows: 4 %>
          </div>
        </div>

        <div class="pt-4">
          <%= f.submit "Update Health Record", 
              class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
          
          <%= link_to "Cancel", health_record_path(@health_record), 
              class: "ml-3 inline-flex justify-center py-2 px-4 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        </div>
      </div>
    <% end %>
  </div>
</div> 